<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5,Profile=Mono"/>
  </startup>

  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Targets>
      <target name="File" xsi:type="File" fileName="Log.txt"/>
      <target name="Network" xsi:type="Network" address="http://192.168.1.5:10000/log"/>
      <target xsi:type="ColoredConsole" name="Console" >
        <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
        <highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
        <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
        <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
        <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
      </target>
    </Targets>
    <rules>
      <logger name="*" minlevel="Trace" writeTo="Console" />
      <logger name="*" minlevel="Trace" writeTo="File" />
      <logger name="*" minlevel="Trace" writeTo="Network" />
    </rules>
  </nlog>

  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="GalileoServiceBehaviour">
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service behaviorConfiguration="GalileoServiceBehaviour" name="RaspberryPi.Connection.Galileo">
        <endpoint address="http://192.168.1.5:10000/" binding="basicHttpBinding"
          name="GalileoEndpoint" contract="RaspberryPi.Connection.IGalileo" />
      </service>
    </services>
  </system.serviceModel>
</configuration>
