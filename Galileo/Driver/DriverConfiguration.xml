<?xml version="1.0" encoding="utf-8" ?>
<DriverConfigurations>
  <Configuration name="Main">
    
    <Connections>
      <Connection type="I2C" name="I2C_1" address="/dev/i2c-1"/>
    </Connections>
    
    <Drivers>
      <Transmission version="1.0" name="Transmission">
        <Connection name="I2C_1" port ="42"/>
        <Vhiles>
          <Vhile name="FrontLeft" />
          <Vhile name="FrontRight" />
          <Vhile name="BackLeft" />
          <Vhile name="BackRight"/>
        </Vhiles>
      </Transmission>
      
      <CameraNavigator version="1.0" name="CameraNavigator">
        <Connection name="I2cConnectionBus" port ="40"/>
      </CameraNavigator>
      
    </Drivers>
  </Configuration>
</DriverConfigurations>
