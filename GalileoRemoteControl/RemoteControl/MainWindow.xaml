<Window x:Class="RemoteControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock Text="Galielo address:" Width ="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="HostTextBox" HorizontalAlignment="Left" Height="23" Margin="110,10,0,0" TextWrapping="Wrap" Text="http://192.168.1.5:10000" VerticalAlignment="Top" Width="232"/>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="358,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBlock Name ="StateTextBlock" Text="Not connected" Width ="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,38,0,0"/>

    </Grid>
</Window>
